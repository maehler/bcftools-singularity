Bootstrap: docker
From: ubuntu:latest

%post
    apt-get update && \
        apt-get install -y \
            build-essential \
            libz-dev \
            libbz2-dev \
            liblzma-dev \
            git
    git clone git://github.com/samtools/htslib.git
    git clone git://github.com/samtools/bcftools.git
    cd bcftools
    git checkout 1.9
    make && make install
